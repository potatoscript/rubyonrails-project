<div id="<%= dom_id job %>">
  <h4>Job of <%= link_to job.user.name, user_path(job.user) %></h4>
  <h6><%= pluralize(job.views, "view") %></h6>
  <p>
    <strong>Employee:</strong>
    <%= job.employee %>
  </p>

  <p>
    <strong>Department:</strong>
    <%= job.department %>
  </p>

  <p>
    <strong>Job:</strong>
    <%= job.job %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= job.status %>
  </p>
  
</div>
